generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // bisa diganti mysql/postgresql
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String  @default("user") // "user" atau "admin"
}
